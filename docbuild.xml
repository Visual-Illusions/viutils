<?xml version="1.0" encoding="UTF-8"?>
<project name="VIUtils JavaDoc creator" default="zip" basedir=".">
  <description>
      This script will build the VIUtils JavaDocs and zip them
  </description>
	
  <target name="clean" description="Remove the output directories">
	<delete dir="docs" />
  </target>

  <target name="init" depends="clean" description="Create the output directories.">
      <mkdir dir="docs" />
  </target>

  <target name="javadoc" depends="init" description="Generate javadocs">
    <javadoc 
    	author="true"
    	access="private"
        destdir="docs"
        doctitle="VIUtils- Visual Illusions Java Utilities Library"
        nodeprecated="false"
        nodeprecatedlist="false"
        noindex="false"
        nonavbar="false"
        notree="false"
        packagenames="net.visualillusionsent.utils"
        source="1.7"
        sourcepath="src/main/java"
        splitindex="false"
        use="true"
        version="true"
        windowtitle="VIUtils">
      <link href="http://docs.oracle.com/javase/7/docs/api/"/>
      <header><![CDATA[<h2><strong>VIUtils</strong> v1.0</h2>]]></header>
      <footer><![CDATA[<h2><strong>VIUtils</strong> v1.0</h2>]]></footer>
      <bottom><![CDATA[<i>Copyright &copy; 2012-2013 Visual Illusions Entertainment. All Rights Reserved.</i>]]></bottom>
    </javadoc>
  </target>

  <target name="zip" depends="javadoc" description="Zips javadocs">
	<zip destfile="VIUtilsDocs.zip" basedir="docs" />
  </target>

</project>
